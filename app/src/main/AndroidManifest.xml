<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dragandquery">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".tutorial.TutorialCategoryLection"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:noHistory="true"
            android:parentActivityName=".tutorial.TutorialCategory"
            android:screenOrientation="sensorPortrait"></activity>
        <activity
            android:name=".tutorial.TutorialCategory"
            android:label="@string/title_activity_tutorial_category"
            android:parentActivityName=".Tutorial"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.dragandquery.Tutorial" />
        </activity>
        <activity
            android:name=".Tutorial"
            android:label="@string/title_activity_tutorial"
            android:parentActivityName=".Navigation"
            android:screenOrientation="sensorPortrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".Practice" />
        <activity
            android:name=".Free"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="sensorPortrait"/>
        <activity
            android:name=".Navigation"
            android:clearTaskOnLaunch="false"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="sensorPortrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Settings"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen"
            android:screenOrientation="sensorPortrait"/>
    </application>

</manifest>