<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Settings">

    <ImageView
        android:id="@+id/settings_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tv_changeImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@string/welcome"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/textcolor_white"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_image"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/settings_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:hint="@string/default_name"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/textcolor_white"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@drawable/border_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_changeImg"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/settings_mail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:hint="@string/default_mail"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/textcolor_white"
        android:gravity="center"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:background="@drawable/border_dark"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settings_name"
        android:layout_marginTop="16dp"/>

    <ProgressBar
        android:id="@+id/settings_pb_tutorial"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="80"
        android:progressDrawable="@drawable/my_pb"
        android:background="@drawable/pb_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintTop_toBottomOf="@id/settings_mail"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/tv_reset_tutorial"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@string/global_reset"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/textcolor_white"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/border_white"
        app:layout_constraintTop_toTopOf="@id/settings_pb_tutorial"
        app:layout_constraintBottom_toBottomOf="@id/settings_pb_practise"
        app:layout_constraintLeft_toRightOf="@id/settings_pb_tutorial"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintRight_toRightOf="parent"/>

    <ProgressBar
        android:id="@+id/settings_pb_practise"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="80"
        android:progressDrawable="@drawable/my_pb"
        android:background="@drawable/pb_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintTop_toBottomOf="@id/settings_pb_tutorial"
        android:layout_marginTop="16dp"
        />

    <TextView
        android:id="@+id/save_settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/textcolor_white"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/border_white"
    app:layout_constraintTop_toBottomOf="@id/settings_pb_practise"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>