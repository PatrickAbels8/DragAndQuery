<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frag_table"
    android:background="@color/background_light"
    android:visibility="invisible"
    tools:visibility="visible">

    <TableLayout
        android:id="@+id/tl_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/raw_query"
        app:layout_constraintBottom_toTopOf="@id/raw_query"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:background="@color/cell_background">
        <TableRow
            android:background="@color/attribute_background">
            <TextView
                android:text="Name"
                android:textStyle="bold"
                android:textColor="@color/attribute_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="Alter"
                android:textStyle="bold"
                android:textColor="@color/attribute_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="Lieblingsfach"
                android:textStyle="bold"
                android:textColor="@color/attribute_text"
                android:paddingLeft="2dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Anton"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="14"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="Mathematik"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Beate"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="12"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="Englisch"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Casper"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="14"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="Geschichte"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
        </TableRow>
        <TableRow>
            <TextView
                android:text="Dorian"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="13"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
            <TextView
                android:text="Politik"
                android:textColor="@color/cell_text"
                android:paddingLeft="2dp" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/raw_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/frag_retry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/frag_retry"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="1"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_centerHorizontal="true"
        android:text="SELECT * \n FROM table" />

    <ImageButton
        android:id="@+id/frag_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/btn_retry"/>

</androidx.constraintlayout.widget.ConstraintLayout>