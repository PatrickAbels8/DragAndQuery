<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:id="@+id/cl_blocks">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_blocks"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/ll_categories">

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_categories"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/block_category1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cat1_block"
            android:text="@string/block_cat1"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/textcolor_white"/>

        <Button
            android:id="@+id/block_category2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cat2_block"
            android:text="@string/block_cat2"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/textcolor_white"/>

        <Button
            android:id="@+id/block_category3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cat3_block"
            android:text="@string/block_cat3"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/textcolor_white"/>

        <Button
            android:id="@+id/block_category4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cat4_block"
            android:text="@string/block_cat4"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/textcolor_white"/>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>