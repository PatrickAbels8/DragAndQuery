<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/frag_input"
    android:layout_gravity="center_horizontal">


    <ImageView
        android:id="@+id/bird_input"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/bird_happy"
        android:layout_alignParentRight="true"/>

    <LinearLayout
        android:id="@+id/ll_input"
        android:layout_below="@id/bird_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@color/foreground"
        >

        <TextView
            android:id="@+id/tv_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/c1l1_input"
            android:textSize="@dimen/tutorial_input_textSize"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/btn_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accept_input"/>

    </LinearLayout>


</RelativeLayout>