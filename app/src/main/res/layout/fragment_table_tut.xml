<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/frag_table"
    android:background="@drawable/border_berry_filled"
    android:visibility="invisible"
    tools:visibility="visible">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@id/raw_query"
        app:layout_constraintBottom_toTopOf="@id/ll_feedback_btns"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TableLayout
                android:id="@+id/tl_table"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_berry_dark_filled">

            </TableLayout>

        </HorizontalScrollView>

    </ScrollView>

    <TextView
        android:id="@+id/raw_query"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/ll_feedback_btns"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_centerHorizontal="true"
        android:text="SELECT * \n FROM table" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        android:id="@+id/ll_feedback_btns">

        <Button
            android:id="@+id/btn_feedback_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_back"
            android:background="@drawable/border_white"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/textcolor_white"/>

        <Button
            android:id="@+id/btn_feedback_forth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feedback_forth"
            android:background="@drawable/border_white"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/textcolor_white"
            android:layout_marginLeft="16dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>