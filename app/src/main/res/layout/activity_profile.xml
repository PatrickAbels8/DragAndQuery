<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Navigation">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/profile_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Name"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/textcolor_white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            android:layout_marginTop="32dp"/>

        <TextView
            android:id="@+id/profile_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="Mail"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/textcolor_white"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_name"
            android:layout_marginTop="32dp"/>

        <ProgressBar
        android:id="@+id/pb_tutorial"
        android:layout_width="100dp"
        android:layout_height="100dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:progress="80"
            android:progressDrawable="@drawable/my_pb"
            android:background="@drawable/pb_background"
        app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.25"
            app:layout_constraintTop_toBottomOf="@id/profile_mail"
            android:layout_marginTop="32dp"
        />

        <TextView
            android:id="@+id/tv_tutorial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="@string/pb_tutorial"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/textcolor_white"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:background="@drawable/border_white"
            app:layout_constraintTop_toTopOf="@id/pb_tutorial"
            app:layout_constraintBottom_toBottomOf="@id/pb_tutorial"
            app:layout_constraintLeft_toRightOf="@id/pb_tutorial"
            app:layout_constraintHorizontal_bias="0.4"
            app:layout_constraintRight_toRightOf="parent"/>

    <ProgressBar
        android:id="@+id/pb_practise"
        android:layout_width="100dp"
        android:layout_height="100dp"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:progress="80"
        android:progressDrawable="@drawable/my_pb"
        android:background="@drawable/pb_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintTop_toBottomOf="@id/pb_tutorial"
        android:layout_marginTop="32dp"
        />

    <TextView
        android:id="@+id/tv_practise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:text="@string/pb_practise"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/textcolor_white"
        android:gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:background="@drawable/border_white"
        app:layout_constraintTop_toTopOf="@id/pb_practise"
        app:layout_constraintBottom_toBottomOf="@id/pb_practise"
        app:layout_constraintLeft_toRightOf="@id/pb_practise"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/swipehint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="4dp"
        android:src="@drawable/swipehint_right"/>


</androidx.constraintlayout.widget.ConstraintLayout>