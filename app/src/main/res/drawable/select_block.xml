<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#090E09"/>
                    <size android:width="40dp" android:height="25dp"/>
                </shape>
            </item>
            <item android:right="@dimen/block_ui_overlapping" android:bottom="@dimen/block_ui_overlapping">
                <shape>
                    <corners android:radius="3dp"/>
                    <solid android:color="#b0ff0000"/>
                </shape>
            </item>
            <item android:bottom="@dimen/block_ui_overlapping" android:right="@dimen/block_ui_overlapping">
                <shape>
                    <solid android:color="#ff0000" />
                    <corners android:radius="3dp"/>
                </shape>
            </item>
            <item android:bottom="12dp" android:left="1dp" android:right="6dp" android:top="1dp">
                <shape>
                    <solid android:color="#6FDF6868"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>